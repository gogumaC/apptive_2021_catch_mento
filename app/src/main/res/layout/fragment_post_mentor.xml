<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f8f8f8"
        >
        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/mentor_post_floatting_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/FloattingBtn"
            android:textColor="@color/white"
            android:backgroundTint="#2f54c4"
            android:gravity="center"
            android:textStyle="bold"
            android:visibility="gone"
            android:text="1:1 문의하기"
            android:layout_margin="33dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:padding="18dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/profile"
                            android:id="@+id/mentor_post_image"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/mentor_post_title"
                            android:layout_marginTop="18dp"
                            android:textSize="18sp"
                            android:textColor="#505050"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/mentor_post_subtitle"
                            android:textStyle="normal"
                            android:textSize="13sp"
                            android:textColor="#505050"
                            android:lineSpacingExtra="7sp"
                            android:layout_marginTop="16dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#f2f2f2"
                            android:layout_marginTop="22dp"
                            />

                        <TextView
                            android:id="@+id/mentor_post_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="6dp"
                            android:lineSpacingExtra="8sp"
                            android:textColor="#8d8d8d"
                            android:textSize="10sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/mentor_post_Grade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="6dp"
                            android:lineSpacingExtra="8sp"
                            android:textColor="#8d8d8d"
                            android:textSize="10sp"
                            android:textStyle="normal" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="7dp"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/icon_star_rating">
                            </ImageView>
                            <TextView
                                xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:layout_gravity="center"
                                android:textColor="#505050"
                                android:id="@+id/mentor_post_star"
                                android:text="4.5"/>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="18dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="수업내용"
                            android:textColor="#2f54c4"
                            android:textSize="15sp"
                            android:textStyle="bold" />



                        <TextView
                            android:id="@+id/mentor_post_educont"
                            android:layout_width="match_parent"
                            android:layout_height="154dp"
                            android:layout_marginTop="23dp"
                            android:hint="내용을 입력해주세요"
                            android:lineSpacingExtra="10sp"
                            android:textColor="#505050"
                            android:textSize="12sp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="커리큘럼"
                            android:textColor="#2f54c4"
                            android:textSize="15sp"
                            android:textStyle="bold" />



                        <TextView
                            android:id="@+id/mentor_post_curr"
                            android:layout_width="match_parent"
                            android:layout_height="154dp"
                            android:layout_marginTop="23dp"
                            android:hint="내용을 입력해주세요"
                            android:lineSpacingExtra="10sp"
                            android:textColor="#505050"
                            android:textSize="12sp"
                            android:textStyle="normal" />

                        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="해당 멘토의 차별점"
                            android:textColor="#2f54c4"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/mentor_post_appeal"
                            android:layout_width="match_parent"
                            android:layout_height="154dp"
                            android:layout_marginTop="23dp"
                            android:hint="내용을 입력해주세요"
                            android:lineSpacingExtra="10sp"
                            android:textColor="#505050"
                            android:textSize="12sp"
                            android:textStyle="normal" />

                    </LinearLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="18dp"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#2f54c4"
                            android:id="@+id/mentor_post_information_textview"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:text="희망 멘토링 정보"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/mentor_post_category_textview"
                            android:textStyle="normal"
                            android:textSize="11sp"
                            android:textColor="#8d8d8d"
                            android:lineSpacingExtra="13sp"
                            android:layout_marginTop="31dp"
                            app:layout_constraintTop_toBottomOf="@+id/mentor_post_information_textview"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:text="카테고리"/>
                        <TextView
                            android:id="@+id/mentor_post_category_spinner"
                            android:layout_centerHorizontal="true"
                            app:layout_constraintTop_toTopOf="@id/mentor_post_category_textview"
                            app:layout_constraintBottom_toBottomOf="@id/mentor_post_category_textview"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_width="149dp"
                            android:gravity="end"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/mentor_post_frequency_textview"
                            app:layout_constraintTop_toBottomOf="@+id/mentor_post_category_textview"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textStyle="normal"
                            android:textSize="11sp"
                            android:textColor="#8d8d8d"
                            android:lineSpacingExtra="13sp"
                            android:layout_marginTop="31dp"
                            android:text="횟수"/>
                        <TextView
                            android:id="@+id/mentor_post_frequency_spinner"
                            android:layout_centerHorizontal="true"
                            app:layout_constraintTop_toTopOf="@id/mentor_post_frequency_textview"
                            app:layout_constraintBottom_toBottomOf="@id/mentor_post_frequency_textview"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_width="149dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/mentor_post_group_textview"
                            app:layout_constraintTop_toBottomOf="@+id/mentor_post_frequency_textview"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textStyle="normal"
                            android:textSize="11sp"
                            android:textColor="#8d8d8d"
                            android:lineSpacingExtra="13sp"
                            android:layout_marginTop="31dp"
                            android:text="그룹 멘토링 가능 여부"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가능"
                            android:id="@+id/mentor_post_group_button"
                            app:layout_constraintTop_toTopOf="@id/mentor_post_group_textview"
                            app:layout_constraintBottom_toBottomOf="@id/mentor_post_group_textview"
                            app:layout_constraintRight_toRightOf="parent"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/mentor_post_online_textview"
                            app:layout_constraintTop_toBottomOf="@+id/mentor_post_group_textview"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textStyle="normal"
                            android:textSize="11sp"
                            android:textColor="#8d8d8d"
                            android:lineSpacingExtra="13sp"
                            android:layout_marginTop="31dp"
                            android:text="온라인 멘토링 가능 여부"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가능"
                            android:id="@+id/mentor_post_online_button"
                            app:layout_constraintTop_toTopOf="@id/mentor_post_online_textview"
                            app:layout_constraintBottom_toBottomOf="@id/mentor_post_online_textview"
                            app:layout_constraintRight_toRightOf="parent"/>
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/mentor_post_offline_textview"
                            app:layout_constraintTop_toBottomOf="@id/mentor_post_online_textview"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textStyle="normal"
                            android:textSize="11sp"
                            android:textColor="#8d8d8d"
                            android:lineSpacingExtra="13sp"
                            android:layout_marginTop="31dp"
                            android:text="오프라인 가능지역"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="230dp"
                            android:layout_height="60dp"
                            android:backgroundTint="#c9c9c9"
                            android:id="@+id/mentor_post_offline_Button"
                            app:layout_constraintTop_toTopOf="@id/mentor_post_offline_textview"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginLeft="50dp"

                            tools:ignore="NestedScrolling"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="18dp"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#2f54c4"
                            android:id="@+id/mentor_post_information_textview2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:text="멘토 정보"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/mentor_post_nickname_textview"
                            android:textStyle="normal"
                            android:textSize="11sp"
                            android:textColor="#8d8d8d"
                            android:layout_marginTop="31dp"
                            app:layout_constraintTop_toBottomOf="@+id/mentor_post_information_textview2"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:text="닉네임"/>
                        <TextView
                            android:id="@+id/mentor_post_nickname_textview2"
                            android:layout_centerHorizontal="true"
                            android:gravity="right"
                            app:layout_constraintTop_toTopOf="@id/mentor_post_nickname_textview"
                            app:layout_constraintBottom_toBottomOf="@id/mentor_post_nickname_textview"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_width="149dp"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/mentor_post_Grade_textview"
                            app:layout_constraintTop_toBottomOf="@+id/mentor_post_nickname_textview"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textStyle="normal"
                            android:textSize="11sp"
                            android:textColor="#8d8d8d"
                            android:lineSpacingExtra="13sp"
                            android:layout_marginTop="31dp"
                            android:text="학교"/>
                        <TextView
                            android:id="@+id/mentor_post_Grade_textview2"
                            android:layout_centerHorizontal="true"
                            app:layout_constraintTop_toTopOf="@id/mentor_post_Grade_textview"
                            app:layout_constraintBottom_toBottomOf="@id/mentor_post_Grade_textview"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_width="149dp"
                            android:gravity="right"
                            android:layout_height="wrap_content"
                            android:text="부산대학교 어쩌고학과"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/mentor_post_region_textview"
                            app:layout_constraintTop_toBottomOf="@+id/mentor_post_Grade_textview"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textStyle="normal"
                            android:textSize="11sp"
                            android:textColor="#8d8d8d"
                            android:lineSpacingExtra="13sp"
                            android:layout_marginTop="31dp"
                            android:text="거주"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가능"
                            android:id="@+id/mentor_post_region_textview2"
                            app:layout_constraintTop_toTopOf="@id/mentor_post_region_textview"
                            app:layout_constraintBottom_toBottomOf="@id/mentor_post_region_textview"
                            app:layout_constraintRight_toRightOf="parent"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/mentor_post_career_textview"
                            app:layout_constraintTop_toBottomOf="@+id/mentor_post_region_textview"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:textStyle="normal"
                            android:textSize="11sp"
                            android:textColor="#8d8d8d"
                            android:lineSpacingExtra="13sp"
                            android:layout_marginTop="31dp"
                            android:text="경력"/>
                        <TextView
                            android:layout_width="149dp"
                            android:layout_height="wrap_content"

                            android:id="@+id/mentor_post_career_textview2"
                            app:layout_constraintTop_toTopOf="@id/mentor_post_career_textview"
                            app:layout_constraintBottom_toBottomOf="@id/mentor_post_career_textview"
                            app:layout_constraintRight_toRightOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>