<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp">

        <View
            android:id="@+id/catchMentoBottomNavBarBorder"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="#fafafa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/catchMentoBottomNavBarProgressBtn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@null"
            app:layout_constraintEnd_toStartOf="@+id/catchMentoBottomNavBarHomeBtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_calendar" />

        <ImageButton
            android:id="@+id/catchMentoBottomNavBarHomeBtn"
            android:layout_width="69dp"
            android:layout_height="32dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/style_nav_home_btn"
            app:circularflow_radiusInDP="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/catchMentoBottomNavBarProgressBtn"
            app:layout_constraintEnd_toStartOf="@+id/catchMentoBottomNavBarMyPageBtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/catchMentoBottomNavBarProgressBtn"
            app:layout_constraintTop_toTopOf="@+id/catchMentoBottomNavBarProgressBtn"
            app:srcCompat="@drawable/logo_catchmentor_white" />

        <ImageButton
            android:id="@+id/catchMentoBottomNavBarMyPageBtn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/catchMentoBottomNavBarHomeBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_mypage" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-12dp"
            android:text="학습현황"
            android:textColor="#8d8d8d"

            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="@+id/catchMentoBottomNavBarProgressBtn"
            app:layout_constraintStart_toStartOf="@+id/catchMentoBottomNavBarProgressBtn"
            app:layout_constraintTop_toBottomOf="@+id/catchMentoBottomNavBarProgressBtn" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-12dp"
            android:text="마이페이지"
            android:textColor="#8d8d8d"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="@+id/catchMentoBottomNavBarMyPageBtn"
            app:layout_constraintStart_toEndOf="@+id/catchMentoBottomNavBarHomeBtn"
            app:layout_constraintTop_toBottomOf="@+id/catchMentoBottomNavBarMyPageBtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
