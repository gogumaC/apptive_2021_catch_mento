<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="87dp"
    android:background="@color/white"
    android:layout_marginTop="3dp"
    xmlns:tools="http://schemas.android.com/tools">

    <!--Code for layer -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/chatting_list_item_image"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="23dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="30dp"
        android:background="@drawable/profile">
    </de.hdodenhof.circleimageview.CircleImageView>
    <View
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginStart="18dp"
        android:background="@drawable/icon_check"
        app:layout_constraintTop_toTopOf="@id/chatting_list_item_image"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/chatting_list_item_check"
        android:visibility="gone">
    </View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatting_list_item_post"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="#505050"
        app:layout_constraintLeft_toRightOf="@id/chatting_list_item_image"
        app:layout_constraintTop_toTopOf="@id/chatting_list_item_image"
        android:layout_marginLeft="20dp"
        android:text="서초동 영어그룹과외 3명이요"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatting_list_item_chat"
        android:textStyle="normal"
        android:textSize="10sp"
        android:textColor="#505050"
        android:lineSpacingExtra="8sp"
        app:layout_constraintTop_toBottomOf="@id/chatting_list_item_post"
        app:layout_constraintLeft_toRightOf="@id/chatting_list_item_image"
android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:text="서초동 스벅에서 그룹과외 가능하신지 …"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatting_list_item_time"
        android:textStyle="normal"
        android:textSize="10sp"
        android:textColor="#8d8d8d"
        android:lineSpacingExtra="8sp"
        app:layout_constraintTop_toBottomOf="@id/chatting_list_item_chat"
        app:layout_constraintLeft_toRightOf="@id/chatting_list_item_image"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"

        android:text="2:33 PM"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="3dp"
        android:paddingHorizontal="8dp"
        android:layout_marginEnd="18dp"
        android:id="@+id/chatting_list_item_match"
        android:text="매칭 중"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:textSize="10sp"
        app:layout_constraintTop_toTopOf="@id/chatting_list_item_chat"
        app:layout_constraintBottom_toBottomOf="@id/chatting_list_item_chat"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>