<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/y_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        />
    <TextView
        android:id="@+id/y_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:visibility="invisible"
        android:textColor="#333333"
        android:layout_toRightOf="@+id/y_iv"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/y_tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/y_tv_name"
        android:layout_toRightOf="@id/y_iv"
        android:layout_marginLeft="16dp"
        android:padding="12dp"
        android:maxWidth="250dp"
        android:textColor="@color/black"
        android:background="@drawable/style_chatting_you"
        />
    <TextView
        android:id="@+id/y_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/y_tv_msg"
        android:layout_marginLeft="8dp"
        android:layout_alignBottom="@id/y_tv_msg"/>

</RelativeLayout>
</layout>